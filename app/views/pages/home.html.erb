<%# HTML correspondiente al Home ENG %>
<title>Paszkowicz-Group</title>

<%# division correspondiente a home ENG %>
<div class="home-container">

  <%# barra de navegacion eng%>
  <%= render 'layouts/navbar' %>

  <%# division de la presentacion %>
  <div class="home-presentation">
    <div class="profile-card">
      <div class="profile-image">
        <img src="https://res.cloudinary.com/dcfmvazgl/image/upload/v1727608993/Wash%20portfolio/paszkowicz_gzw43e.png" alt="">

      </div>
      <div class="profile-text">

      </div>

    </div>

  </div>


  <div class="about">
    <%# division correspondiente a proyectos en ingles %>
    <%= render 'pages/aboutme' %>
  </div>

  <div class="projects">
    <%# division correspondiente a about en ingles %>
    <%= render 'pages/projects', class_name: "projects-container" %>
  </div>

  <div class="contact"></div>
  <%# division correspondiente a contacto %>
  <%= render 'pages/contact' %>

  <%= render 'layouts/footer' %>

  <%# javascript correspondiente a la transicion de la home-presentation %>
 <script>

    let lastScrollTop = 0;
    const homePresentation = document.querySelector('.home-presentation');

    window.addEventListener('scroll', function() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (scrollTop > lastScrollTop) {
        // Scrolling down
        homePresentation.classList.add('hidden');
      } else {
        // Scrolling up
        homePresentation.classList.remove('hidden');
      }
      lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; // For Mobile or negative scrolling
    });

  </script>


</div>
