<%# HTML correspondiente a proyectos en ingles %>

<%# division general %>
<div class="projects-container">

  <%# Titulo  %>
  <div class="project-card-title">
    <h1>Projects</h1>
  </div>

  <%# texto %>
  <div class="project-card-text-container">
    <p>
      "Here are all the projects that we've created or contributed to.
      Spanning a diverse range of fields and interests, our portfolio
      reflects a dedication to innovation and collaboration. Whether it's building intuitive mobile
      applications, designing impactful marketing campaigns, or
      contributing code to open-source initiatives, we take pride in
      delivering results that make a difference. Explore this collection
      of endeavors, each one a testament to our commitment to excellence
      and our enthusiasm for pushing boundaries.".
    </p>
  </div>

  <%# wave card start %>
  <div class="project-card-container">

    <div class="projects-card-fullstack-title">
      <h2>Fullstack Projects</h2>
    </div>

    <div class="nft-card">

      <div class="ntf-card-img">
        <%= image_tag "hive-logo-png.png"%>
      </div>

      <div class="ntf-card-title">
        <h2>Hive</h2>
      </div>
      <div class="ntf-card-description">
        <p class='description'>A sport App dedicated
        for people in situation of overweight.</p>
      </div>

    </div>

  </div>

</div>


<script>

  document.addEventListener("DOMContentLoaded", () => {
    const projectPresentation = document.querySelector(".project-presentation");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            projectPresentation.classList.add("visible");
          } else {
            projectPresentation.classList.remove("visible");
          }
        });
      },
      { threshold: 0.5 } // Adjusts how much of the element should be visible to trigger
    );

    observer.observe(projectPresentation);
  });

</script>
